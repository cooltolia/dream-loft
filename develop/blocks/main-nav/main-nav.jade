- var links = [{url: "product.html", text: "Мебель", subnav: [{url: '#', text: 'Кресла'}, {url: '#', text: 'Стулья'}, {url: '#', text: 'Диваны'}, {url: '#', text: 'Кровати'}, {url: '#', text: 'Барные стулья'}, {url: '#', text: 'Столы'}, {url: '#', text: 'Слэбы'}, {url: '#', text: 'Комоды'}, {url: '#', text: 'Офис'}, {url: '#', text: 'Рабочая станция'},]}, {url: "", text: "Освещение", subnav: [{url: '#', text: 'Люстры'}, {url: '#', text: 'Торшеры'}, {url: '#', text: 'Настольные лампы'}, {url: '#', text: 'Подвесные сушилки'}]}, {url: "", text: "Декор", subnav: [{url: '#', text: 'Дизайнерские вещитры'}, {url: '#', text: 'Картины'}]}, {url: "", text: "Новинки"}, {url: "", text: "Контакты"}]

mixin main-nav()
    +b.NAV.main-nav
        +e.UL.list
            each link in links
                if (link.subnav)
                    +e.LI.item.has-subnav
                        +e.A.link(href="#{link.url}") #{link.text}
                        if (link.subnav)
                            +e.subnav
                                +e.UL.sublist
                                    each sublink in link.subnav
                                        +e.LI.subitem
                                            +e.A.sublink(href="#{sublink.url}") #{sublink.text}
                else
                    +e.LI.item
                        +e.A.link(href="#{link.url}") #{link.text}
                        if (link.subnav)
                            +e.subnav
                                +e.UL.sublist
                                    each sublink in link.subnav
                                        +e.LI.subitem
                                            +e.A.sublink(href="#{sublink.url}") #{sublink.text}
                                    
mixin mobile-nav()
    +b.NAV.mobile-nav
        +e.UL.list
            each link in links
                +e.LI.item
                    +e.A.link(href="#{link.url}") #{link.text}
                    if (link.subnav)
                        +e.UL.submenu
                            each sublink in link.subnav
                                +e.LI.subitem
                                    +e.A.sublink(href="#{sublink.url}") #{sublink.text}
                        